@model IEnumerable<CSFuncionario.Models.func>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script>
        $(function () {
            $("#datepicker").datepicker({
                dateFormat: 'dd/mm/yy'
            })
        });
    </script>
}

@Html.ActionLink("Cadastrar Funcionário", "Create", new { @class = "btn btn-default" })

<table class="table">
    <tr>
        <th class="name">
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Data de Nascimento")
        </th>
        <th>
            @Html.DisplayName("Salário")
        </th>
        <th>
            @Html.DisplayName("Atividades")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salario)
            </td>
            <td id="atividade">
                @Html.DisplayFor(modelItem => item.Atividade)
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" value="Editar" onclick="location.href=('/Home/Edit/' + @item.codFuncionario)" class="btn btn-default" />
                        <input type="button" value="Deletar" onclick="location.href=('/Home/Delete/' + @item.codFuncionario)" class="btn btn-default" />
                    </div>
                </div>
            </td>
        </tr>

    }
</table>
